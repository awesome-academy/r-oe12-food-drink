<div class="order-detail-content">
  <div class="table-responsive">
    <table class="table table-bordered cart_summary">
      <thead>
        <tr>
          <th><%= t ".product" %></th>
          <th><%= t ".name" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".quantity" %></th>
          <th><%= t ".total_label" %></th>
          <th><%= t ".function" %></th>
        </tr>
      </thead>
      <tbody>
        <% if @order_details.any? %>
          <%= render partial: "order_cart", collection: @order_details, as: :order_detail %>
        <% else %>
          <tr><td colspan="6"><%= t ".no_item" %></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="cart_navigation">
    <% if @order_details.any? %>
      <%= link_to orders_path, class: "checkout-btn", method: :post do %>
        <i class="fa fa-check"></i><%= t ".checkout" %>
      <% end %>
    <% end %>
  </div>
</div>

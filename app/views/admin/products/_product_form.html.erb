<%= form_for [:admin, @product] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name %><span class="red">*</span>
    <%= f.text_field :name, class: "form-control", placeholder: t(".name_placeholder") %>
  </div>
  <div class="form-group">
    <%= f.label :describe %><span class="red">*</span>
    <%= f.text_area :describe, class: "form-control", placeholder: t(".detail_placeholder") %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %><span class="red">*</span>
    <%= f.number_field :quantity, class: "form-control", placeholder: t(".quality_placeholder") %>
  </div>
  <div class="form-group">
    <%= f.label :price %><span class="red">*</span>
    <%= f.number_field :price, class: "form-control", placeholder: t(".price_placeholder") %>
  </div>
  <div class="form-group">
    <%= f.label :price_new %>
    <%= f.number_field :price_new, class: "form-control", placeholder: t(".price_placeholder") %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, t(".category") %>
    <%= f.select :category_id, category, class: "form-control" %>
  </div>
  <%= f.submit t(".button_submit"), class: "btn btn-primary" %>
<% end %>

<% @products.each_with_index do |product, index| %>
  <tr>
    <td><%= create_index params[:page], index,
      Settings.product.paginate.per_page %></td>
    <td class="th-product"><%= image_tag product.picture.url %></td>
    <td><%= product.name %></td>
    <td><%= product.quantity %></td>
    <td><%= product.price %></td>
    <td><%= product.category_name %></td>
    <td>
      <%= link_to edit_admin_product_path(product) do %>     
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
      |
      <%= link_to admin_product_path(product), method: :delete,
        data: {confirm: t(".you_sure")} do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
      </td>
  </tr>
<% end %>

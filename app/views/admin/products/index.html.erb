<% provide :title, t(".manage_products") %>
<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t ".manage_products" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-heading">
        <%= link_to t(".add_new"), new_admin_product_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".list_product" %>
        </div>
        <div class="panel-body">
          <div class="wishlist-item table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".index" %></th>
                  <th class="th-product"><%= t ".pricure" %></th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".quantity" %></th>
                  <th><%= t ".price" %></th>
                  <th><%= t ".category_id" %></th>
                  <th><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody id="list-product">
                <%= render partial: "product" %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= paginate @products, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>

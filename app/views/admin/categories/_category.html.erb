<% @categories.each_with_index do |category, index| %>
  <tr>
    <td><%= create_index params[:page], index,
      Settings.product.paginate.per_page %></td>
    <td><%= category.name %></td>
    <td><%= category.products.size %></td>
    <td>
      <%= link_to edit_admin_category_path(category) do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
      |
      <%= link_to admin_category_path(category), method: :delete,
        data: {confirm: t(".you_sure")} do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
      </td>
  </tr>
<% end %>

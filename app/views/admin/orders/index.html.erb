<% provide :title, t(".manage_orders_title") %>
<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t "admin.layouts.manage_orders" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".list_order" %>
        </div>
        <div class="panel-body">
          <div class="wishlist-item table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".index" %></th>
                  <th><%= t ".user_email" %></th>
                  <th><%= t ".user_name" %></th>
                  <th><%= t ".total" %></th>
                  <th><%= t ".status" %></th>
                  <th><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody id="list-order">
                <%= render partial: "order" %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= paginate @orders %>
    </div>
  </div>
</div>

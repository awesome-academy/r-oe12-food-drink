<section class="main-container col2-right-layout">
  <div class="main container">
    <div class="row">
      <div class="col-main col-sm-12 col-xs-12">
        <div class="my-account">
          <div class="page-title">
            <h2><%= t ".history_orders" %></h2>
          </div>
          <div class="wishlist-item table-responsive">
            <table class="col-md-12">
              <thead>
                <tr>
                  <th class="th-details"><%= t ".no_label" %></th>
                  <th class="th-price"><%= t ".ordered_date_label" %></th>
                  <th class="th-price"><%= t ".status" %></th>
                  <th class="th-total th-add-to-cart"><%= t ".function" %> </th>
                </tr>
              </thead>
              <tbody id="list-order">
                <% if @orders %>
                  <%= render partial: "order" %>
                <% else %>
                  <tr><td colspan="4"><h5><%= t ".no_order" %></h5></td></tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @orders, previous_label: "<", next_label: ">" %>
        </div>
      </div>
    </div>
  </div>
</section>
